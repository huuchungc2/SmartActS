@model IEnumerable<SmartActS.DataModels.Request>
@using SmartActS.DataModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>Request</h2>

<p>
    @if (ViewBag.IsCustomer=="yes")
    {
        @Html.ActionLink("Create New", "Create")
    }
   
</p>
<table id ="request" class="table table-striped table-bordered table-hover" cellpadding="0" >
    <tr>

        <th>
            @Html.DisplayName("Code")
        </th>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayName("Location Supply")


        </th>
        <th>

            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayName("Duration")

        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        
            <tr class="active">
         <td>
            @Html.DisplayFor(modelItem => item.RequestCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequestTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => new SmartActSModel().Categories.Find(item.CategoryId).CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => new SmartActSModel().Locations.Find(item.LocationSupplyId).LocationName)
        </td>
        <td>

            @if (item.Status == (int)Common.eRequest.Pending)
            {
                <p>Pending</p>
            }
            @if (item.Status == (int)Common.eRequest.Approved)
            {
                <p>Approved</p>
            }
            @if (item.Status == (int)Common.eRequest.Confirmed)
            {
                <p>Confirmed</p>
            }
            @if (item.Status == (int)Common.eRequest.Expired)
            {
                <p>Expired</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DurationExpired) hours
        </td>
        @if (ViewBag.IsCustomer == "yes")
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RequestId }) |
                @Html.ActionLink("Details", "Details", new { id = item.RequestId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RequestId })
            </td>
        }
        @if (ViewBag.IsSupply == "yes")
        {
            <td>

                @Html.ActionLink("Create Response", "Create", "Responses", new { id = item.RequestId }, null)
            </td>
        }
    </tr>
    }

</table>
