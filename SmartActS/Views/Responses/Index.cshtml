@model IEnumerable<SmartActS.DataModels.Response>
 @using SmartActS.DataModels;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>Response</h2>

<p>
    @if(ViewBag.IsAdmin == "yes") { 
       @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table table-striped table-bordered table-hover" cellpadding="0">
    <tr>
        <th>
            @Html.DisplayName("Title")
        </th>
        <th>
            @Html.DisplayName("Request Tile")
        </th>
        <th>
            @Html.DisplayName("Supply")
        </th>
        <th>
            @Html.DisplayName("Response Time")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName("Attach File")
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {

    <tr  class="table-success">
        <td>
            @Html.DisplayFor(modelItem => item.ResponseTitle)
        </td>
        <td>
           
            @Html.DisplayFor(modelItem => new SmartActSModel().Requests.Find(item.RequestId).RequestTitle)
        </td>
        <td>
         
            @Html.DisplayFor(modelItem => new SmartActSModel().Supplies.Find(item.SupplyId).SupplyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ResponseTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => new SmartActSModel().Categories.Find(item.categoryId).CategoryName)
       
        </td>
        <td>
            @if (item.Status == (int)Common.eResponse.Confirmed)

            {
                <p>Confirmed</p>
            }
            @if (item.Status == (int)Common.eResponse.Rejected)

            {<p>Rejected</p>
              
            }
            @if (item.Status == (int)Common.eResponse.Pending)

            {
                <p>Pending</p>
            }
            @if (item.Status == (int)Common.eResponse.Expired)

            {
                <p>Expired</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceSuggest)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileAttachId)
        </td>
       @if (ViewBag.IsCustomer == "yes") { 
        <td>
            @Html.ActionLink("Confirm","Confirm", "Responses", new { id=item.ResponseId },null) |
           
            @Html.ActionLink("Reject", "Reject", "Responses", new { id = item.ResponseId }, null)
        </td>
       }
        @if (ViewBag.IsSupply == "yes")
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ResponseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ResponseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ResponseId })
            </td>
        }
    </tr>
}

</table>
