@model IEnumerable<SmartActS.DataModels.Customer>
@using SmartActS.DataModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>Index</h2>
@if (ViewBag.IsAdmin == "yes") { 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<table class="table table-striped table-bordered table-hover" cellpadding="0">
    <tr>
        <th>
            @Html.DisplayName("Code")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Location")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobiPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
       
       
        <th>
            @Html.DisplayName("Status")
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => new SmartActSModel().Locations.Find(item.LocationId).LocationName)
          
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobiPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        
        
        <td>
            @if (item.IsStatus == (int)Common.eCustomer.Actived)
            {
                <p>Actived</p>
            }
            @if (item.IsStatus == (int)Common.eCustomer.Pending)
            {
                <p>Pending</p>
            }
            @if (item.IsStatus == (int)Common.eCustomer.Closed)
            {
                <p>Closed</p>
            }
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustomerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomerId })
        </td>
    </tr>
}

</table>
